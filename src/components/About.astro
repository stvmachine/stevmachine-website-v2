---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;

// Education data
const education = [
  {
    degree: "Master in Informatics Engineering",
    institution: "Universidad de Santiago de Chile",
    year: "2013 - 2014",
    description: "Computer Software Engineering"
  },
  {
    degree: "Bachelor in Informatics",
    institution: "Universidad de Santiago de Chile",
    year: "2007 - 2014",
    description: "Computer Software Engineering"
  },
  {
    degree: "Bachelor in Engineering Sciences",
    institution: "Universidad de Santiago de Chile",
    year: "2007 - 2012",
    description: "Computer Software Engineering"
  }
];
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:items-center md:gap-16">
    <div class="relative flex-shrink-0 order-2 md:order-1">
      <div class="relative h-96 w-72 overflow-hidden rounded-2xl border-4 border-white shadow-2xl">
        <img
          src="/esteban-photo.jpg"
          alt={name}
          width="400"
          height="600"
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>
    </div>
    <div class="order-1 md:order-2 flex-1">
      <div class="space-y-6 text-base leading-relaxed text-gray-300">
        <p>{description}</p>
        <div class="space-y-6">
          <div>
            <h4 class="mb-3 font-medium text-white">Education</h4>
            <div class="space-y-4">
              {education.map((edu) => (
                <div class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-gradient-to-r before:from-pink-400 before:to-purple-500 before:opacity-80">
                  <h5 class="font-medium text-white">{edu.degree}</h5>
                  <p class="text-sm text-gray-400">{edu.institution} â€¢ {edu.year}</p>
                  <p class="mt-1 text-sm text-gray-400">{edu.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>
