---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>
    <div class="flex-shrink-0">
      <div
        class="relative h-96 w-72 rotate-[5deg] bg-white p-4 shadow-2xl transition-transform duration-300 hover:rotate-[3deg] hover:scale-105 md:rotate-[7deg] md:hover:rotate-[5deg]"
      >
        <div class="relative h-full w-full overflow-hidden rounded-lg">
          <Image
            class="h-full w-full object-cover object-center"
            src={image}
            width="300"
            height="400"
            alt={name}
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</Section>
