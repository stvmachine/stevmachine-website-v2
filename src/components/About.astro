---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="rounded-2xl border border-neutral/20 bg-black p-6 sm:p-8 md:p-10 bg-gradient-to-br from-[#1c232d]/90 to-[#0f1419]/90 backdrop-blur-sm">
    <div class="flex flex-col items-center gap-10 md:flex-row md:items-start md:gap-12">
      <div class="flex-shrink-0 order-2 md:order-1">
        <div class="relative h-80 w-64 rotate-[4deg] bg-white p-3 shadow-2xl transition-transform duration-300 hover:rotate-[2deg] hover:scale-105 md:rotate-[6deg] md:hover:rotate-[4deg]">
          <div class="relative h-full w-full overflow-hidden rounded-lg">
            <Image
              class="h-full w-full object-cover object-center"
              src={image}
              width="300"
              height="400"
              alt={name}
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
          </div>
        </div>
      </div>
      <p class="order-1 md:order-2 w-auto text-base leading-relaxed text-neutral md:pr-5">{description}</p>
    </div>
  </div>
</Section>
