---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<section id={href} class="py-24">
  <div class="mb-10">
    <h2
      class="font-serif text-4xl font-bold tracking-tighter text-fg md:text-5xl"
    >
      {text}
    </h2>
    <div class="mt-4 h-[3px] w-20 rounded-full bg-gradient-to-r from-primary/60 to-transparent"></div>
  </div>
  <slot />
</section>
