---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 items-stretch">
    {
      projects.map(({ name, summary, image, linkPreview, linkSource, slug }) => (
        <article class="surface overflow-hidden flex h-full flex-col">
          <div class="relative h-56 w-full overflow-hidden">
            {slug ? (
              <a href={`/projects/${slug}`} aria-label={`${name} details`}>
                <Image
                  class="h-full w-full object-cover object-center transition-transform duration-300 hover:scale-105"
                  src={image}
                  alt={name}
                  width="600"
                  height="350"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
              </a>
            ) : (
              <>
                <Image
                  class="h-full w-full object-cover object-center"
                  src={image}
                  alt={name}
                  width="600"
                  height="350"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
              </>
            )}
          </div>
          <div class="px-6 py-6 flex h-full flex-col">
            <h3 class="mb-3 font-serif text-2xl font-medium text-primary">
              {slug ? (
                <a href={`/projects/${slug}`} class="hover:underline">
                  {name}
                </a>
              ) : (
                name
              )}
            </h3>
            <p class="text-base text-muted mb-5 leading-relaxed">{summary}</p>
            <div class="mt-auto flex flex-wrap gap-4">
              {slug && (
                <a
                  href={`/projects/${slug}`}
                  class="group flex items-center gap-2 rounded-lg bg-primary px-4 py-2 text-sm font-medium text-white transition-all duration-200 hover:bg-primary/90 hover:scale-105"
                >
                  Details
                </a>
              )}
              {linkSource && (
                <a
                  href={linkSource}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-2 rounded-lg border border-theme px-4 py-2 text-sm font-medium text-fg transition-all duration-200 hover:bg-white/5 hover:scale-105 after:ml-1 after:inline-block after:h-[14px] after:w-[14px] after:bg-current after:[mask-image:url('/external.svg')] after:[-webkit-mask-image:url('/external.svg')] after:[mask-size:contain] after:[-webkit-mask-size:contain] after:[mask-repeat:no-repeat] after:[-webkit-mask-repeat:no-repeat] after:[mask-position:center] after:[-webkit-mask-position:center]"
                >
                  Source
                </a>
              )}
              {linkPreview && (
                <a
                  href={linkPreview}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-2 rounded-lg border border-theme px-4 py-2 text-sm font-medium text-fg transition-all duration-200 hover:bg-white/5 hover:scale-105 after:ml-1 after:inline-block after:h-[14px] after:w-[14px] after:bg-current after:[mask-image:url('/external.svg')] after:[-webkit-mask-image:url('/external.svg')] after:[mask-size:contain] after:[-webkit-mask-size:contain] after:[mask-repeat:no-repeat] after:[-webkit-mask-repeat:no-repeat] after:[mask-position:center] after:[-webkit-mask-position:center]"
                >
                  Preview
                </a>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </div>
</Section>
