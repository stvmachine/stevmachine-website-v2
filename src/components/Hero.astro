---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="relative min-h-screen flex items-center py-24 md:py-32" id="hero">
  <!-- Background with grid pattern -->
  <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-black">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
  </div>
  
  <div class="relative z-10 w-full">
    <div class="mx-auto max-w-7xl px-5">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-bold tracking-tightest text-white leading-tight">
            {name}
          </h1>
          
          <!-- Highlighted specialty box -->
          <div class="inline-block">
            <div class="border-2 border-pink-500 bg-gradient-to-r from-pink-500/10 to-purple-500/10 backdrop-blur-sm rounded-lg px-6 py-4">
              <p class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-transparent bg-gradient-to-r from-pink-400 to-purple-400 bg-clip-text">
                {specialty}
              </p>
            </div>
          </div>
        </div>
        
        <p class="text-lg md:text-xl text-gray-300 leading-relaxed max-w-2xl">
          {summary}
        </p>

        <div class="flex flex-wrap gap-4 pt-4">
          <a
            class="inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-pink-500 to-purple-600 px-8 py-4 text-sm font-medium text-white transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-pink-500/25"
            href={`mailto:${email}`}
          >
            Get in Touch
          </a>
          <a
            class="inline-flex items-center gap-2 rounded-full border border-gray-600 bg-gray-800/50 backdrop-blur-sm px-8 py-4 text-sm font-medium text-gray-200 transition-all duration-300 hover:bg-gray-700/50 hover:border-gray-500"
            href="#projects"
          >
            View Projects
          </a>
        </div>
      </div>

      <!-- Right Content - Profile Image -->
      <div class="flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -inset-4 bg-gradient-to-r from-pink-500/20 to-purple-500/20 rounded-full blur-2xl"></div>
          <div class="relative w-80 h-80 md:w-96 md:h-96 rounded-full overflow-hidden border-4 border-gray-700 shadow-2xl">
            <img 
              src="/profilepic.jpg" 
              alt={name}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</section>
