---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
---

<section class="py-24 md:py-32" id="hero">
  <div class="surface">
    <h1
      class="mb-2 font-serif text-7xl font-bold tracking-tightest text-fg sm:text-8xl md:text-9xl"
    >
      {name}
    </h1>
    <p
      class="mb-8 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
    >
      {specialty}
    </p>
    <p class="mb-10 text-base font-normal text-muted md:text-lg">
      {summary}
    </p>

    <div class="flex flex-wrap gap-4">
      <a
        class="inline-block rounded-full bg-primary px-8 py-4 text-sm leading-5 font-medium text-[#fff] transition-transform duration-200 hover:scale-[1.02]"
        href={`mailto:${email}`}
        >Get in Touch</a
      >
      <a
        class="inline-block rounded-full border border-theme px-8 py-4 text-sm leading-5 font-medium text-fg transition-colors duration-200 hover:bg-white/5"
        href="#projects"
        >View Projects</a
      >
    </div>
  </div>
</section>
