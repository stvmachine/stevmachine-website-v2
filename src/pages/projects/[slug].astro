---
import { SITE_CONTENT } from "@config";
import ProjectLayout from "@layouts/ProjectLayout.astro";
import type { ProjectProps } from "@types";

export function getStaticPaths() {
  return SITE_CONTENT.projects
    .filter((p) => Boolean(p.slug))
    .map((p) => ({ params: { slug: p.slug }, props: { project: p } }));
}

interface PageProps {
  project: ProjectProps;
}

const { project } = Astro.props as PageProps;

const {
  name,
  summary,
  image,
  linkPreview,
  linkSource,
  accentColor = "#2563eb",
} = project;
---

<ProjectLayout>
  <!-- Navigation Header -->
  <nav
    class="mb-8 flex items-center justify-between border-b border-gray-800 pb-6"
  >
    <div class="flex items-center space-x-8">
      <a
        href="/"
        class="bg-gradient-to-r from-pink-400 to-purple-400 bg-clip-text text-2xl font-bold text-transparent"
      >
        âœ¦ logo
      </a>
      <div class="hidden space-x-6 md:flex">
        <a
          href="/#hero"
          class="text-gray-300 transition-colors hover:text-white">Home</a
        >
        <a
          href="/#projects"
          class="text-gray-300 transition-colors hover:text-white">Projects</a
        >
        <a
          href="/#about"
          class="text-gray-300 transition-colors hover:text-white">About</a
        >
        <a
          href="/#contact"
          class="text-gray-300 transition-colors hover:text-white">Contact</a
        >
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <button
        class="rounded-lg bg-pink-600 px-4 py-2 text-sm text-white transition-colors hover:bg-pink-700"
      >
        Sign In
      </button>
      <button
        class="rounded-lg bg-purple-600 px-4 py-2 text-sm text-white transition-colors hover:bg-purple-700"
      >
        Register
      </button>
    </div>
  </nav>

  <article class="space-y-12">
    <!-- Project Header -->
    <header class="relative">
      <!-- Background with subtle pattern -->
      <div
        class="absolute inset-0 rounded-3xl bg-gradient-to-br from-gray-900/50 to-black/50"
      >
      </div>

      <div
        class="relative overflow-hidden rounded-3xl border border-gray-700 bg-gradient-to-br from-gray-900 to-gray-800"
      >
        <!-- Back Navigation -->
        <div class="border-b border-gray-700 p-6">
          <a
            href="/#projects"
            class="inline-flex items-center text-sm text-gray-400 transition-colors hover:text-white"
          >
            <svg
              class="mr-2 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Projects
          </a>
        </div>

        <div class="grid gap-8 p-8 lg:grid-cols-2">
          <!-- Project Info -->
          <div class="space-y-6">
            <div>
              <h1
                class="mb-4 font-serif text-4xl leading-tight font-bold text-white md:text-5xl"
              >
                {name}
              </h1>
              <p class="text-lg leading-relaxed text-gray-300">
                {summary}
              </p>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-4 pt-4">
              {
                linkPreview && (
                  <a
                    href={linkPreview}
                    target="_blank"
                    class="inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-pink-500 to-purple-600 px-6 py-3 font-medium text-white transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-pink-500/25"
                  >
                    <svg
                      class="h-4 w-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                    Live Preview
                  </a>
                )
              }
              {
                linkSource && (
                  <a
                    href={linkSource}
                    target="_blank"
                    class="inline-flex items-center gap-2 rounded-lg bg-gray-700 px-6 py-3 font-medium text-white transition-all duration-300 hover:scale-105 hover:bg-gray-600"
                  >
                    <svg
                      class="h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    Source Code
                  </a>
                )
              }
            </div>
          </div>

          <!-- Project Image -->
          <div class="relative">
            <div
              class="relative overflow-hidden rounded-2xl border border-gray-600 shadow-2xl"
            >
              <img
                src={image}
                width="800"
                height="500"
                alt={name}
                class="h-full w-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
              >
              </div>
            </div>
            <!-- Accent color indicator -->
            <div
              class="absolute -top-2 -right-2 h-6 w-6 rounded-full border-2 border-gray-800 shadow-lg"
              style={`background-color: ${accentColor}`}
            >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Project Details -->
    <section class="grid gap-8 lg:grid-cols-2">
      <div
        class="rounded-2xl border border-gray-700 bg-gradient-to-br from-gray-900 to-gray-800 p-8"
      >
        <h2 class="mb-6 text-2xl font-semibold text-white">Project Overview</h2>
        <div class="space-y-4 leading-relaxed text-gray-300">
          <p>
            {summary}
          </p>
          <p>
            This project showcases modern web development practices with a focus
            on user experience, performance optimization, and scalable
            architecture. Built with cutting-edge technologies to deliver
            exceptional results.
          </p>
        </div>
      </div>

      <div
        class="rounded-2xl border border-gray-700 bg-gradient-to-br from-gray-900 to-gray-800 p-8"
      >
        <h2 class="mb-6 text-2xl font-semibold text-white">
          Technologies Used
        </h2>
        <div class="flex flex-wrap gap-3">
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >React</span
          >
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >TypeScript</span
          >
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >Node.js</span
          >
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >AWS</span
          >
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >Tailwind CSS</span
          >
          <span
            class="rounded-full border border-gray-600 bg-gray-700 px-4 py-2 text-sm text-white transition-colors hover:bg-gray-600"
            >PostgreSQL</span
          >
        </div>
      </div>
    </section>

    <!-- Project Showcase Gallery -->
    <section class="space-y-8">
      <div class="text-center">
        <h2 class="mb-4 font-serif text-3xl font-bold text-white md:text-4xl">
          Project Showcase
        </h2>
        <p class="mx-auto max-w-2xl text-xl text-gray-400">
          Visual highlights and key features of the project
        </p>
      </div>

      {
        (() => {
          const items = SITE_CONTENT.projects
            .filter((p) => p.slug && p.slug !== project.slug)
            .slice(0, 6);
          return (
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
              {items.map((p) => (
                <article class="group relative overflow-hidden rounded-2xl border border-gray-700 bg-gradient-to-br from-gray-900 to-gray-800 transition-all duration-300 hover:border-gray-600 hover:shadow-2xl hover:shadow-purple-500/10">
                  <a
                    href={`/projects/${p.slug}`}
                    aria-label={`${p.name} details`}
                  >
                    <div class="relative aspect-video overflow-hidden">
                      <img
                        src={p.image}
                        alt={p.name}
                        width="600"
                        height="350"
                        class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-110"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent" />

                      <div
                        class="absolute top-4 right-4 h-3 w-3 rounded-full"
                        style={`background-color: ${p.accentColor || "#2563eb"}`}
                      />
                    </div>
                  </a>
                  <div class="p-6">
                    <h3 class="mb-2 text-lg font-semibold text-white transition-colors duration-300 group-hover:text-purple-300">
                      <a href={`/projects/${p.slug}`} class="hover:underline">
                        {p.name}
                      </a>
                    </h3>
                    <p class="line-clamp-2 text-sm leading-relaxed text-gray-300">
                      {p.summary}
                    </p>
                  </div>

                  <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-purple-900/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
                </article>
              ))}
            </div>
          );
        })()
      }
    </section>

    <!-- Call to Action -->
    <section
      class="rounded-3xl border border-gray-700 bg-gradient-to-br from-gray-900 to-gray-800 p-12 text-center"
    >
      <div class="mx-auto max-w-2xl space-y-6">
        <h3 class="text-3xl font-bold text-white">
          Interested in {name}?
        </h3>
        <p class="text-lg leading-relaxed text-gray-300">
          Want to learn more about this project or discuss similar work? I'd
          love to share more details about the development process and technical
          decisions.
        </p>
        <div class="flex flex-wrap justify-center gap-4 pt-4">
          <a
            href="/#projects"
            class="inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-purple-600 to-pink-600 px-8 py-4 font-medium text-white transition-all duration-300 hover:scale-105 hover:from-purple-700 hover:to-pink-700 hover:shadow-lg hover:shadow-purple-500/25"
          >
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Projects
          </a>
          <a
            href="mailto:campos.esteban@gmail.com"
            class="inline-flex items-center gap-2 rounded-full bg-gray-700 px-8 py-4 font-medium text-white transition-all duration-300 hover:scale-105 hover:bg-gray-600"
          >
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Get in Touch
          </a>
        </div>
      </div>
    </section>
  </article>
</ProjectLayout>
